<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <reference id="connectionFactory" interface="javax.jms.ConnectionFactory" />

  <reference id="NCNEXUS38MergeVCWorkflowBeanService" interface="edu.unc.mapseq.workflow.WorkflowBeanService"
    component-name="NCNEXUS38MergeVCWorkflowBeanService" />

  <bean id="NCNEXUS38MergeVCMessageListener" class="edu.unc.mapseq.messaging.ncnexus38.variantcalling.NCNEXUS38MergeVCMessageListener">
    <property name="workflowBeanService" ref="NCNEXUS38MergeVCWorkflowBeanService" />
    <property name="workflowName" value="NCNEXUS38MergeVC" />
  </bean>

  <bean id="NCNEXUS38MergeVCMessageService" class="edu.unc.mapseq.messaging.ncnexus38.mergevc.NCNEXUS38MergeVCMessageService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="connectionFactory" ref="connectionFactory" />
    <property name="messageListener" ref="NCNEXUS38MergeVCMessageListener" />
    <property name="destinationName" value="queue/ncnexus38.merge.vc" />
  </bean>

</blueprint>
